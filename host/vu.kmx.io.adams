(setq *host*
      (resource 'host "vu.kmx.io"
                :user "root"
                :hostname "vu"
                :packages '("emacs:no_x11"
                            "git"
                            "nginx"
                            "postgresql-contrib"
                            "postgresql-server"
                            "rspamd"
                            "rsync"
                            "ruby"
                            "sbcl")))

(resource 'host "vu.kmx.io"
          ;; rc
          (static-file "/etc/rc.conf.local"
                       :owner "root"
                       :group "wheel"
                       :mode #o600)
          (static-file "/etc/hostname.vio0"
                       :owner "root"
                       :group "wheel"
                       :mode #o600)
          ;; pf
          #.(include "pf")
          ;; sshd
          #.(include "sshd")
          ;; genpassword
          #.(include "OpenBSD/genpassword")
          ;; backup
          #.(include "OpenBSD/backup")
          ;; users
          #.(include "user/dx")
          #.(include "user/judy")
          #.(include "user/s0ca")
          #.(include "user/vrizzt")
          ;; git
          #.(include "git")
          ;; letsencrypt
          #.(include "letsencrypt")
          ;; Nginx
          #.(include "nginx")
          ;; PostgreSQL
          #.(include "postgresql")
          ;; Deploy scripts
          (resource 'directory "/home/scripts"
                    :owner "root"
                    :group "wheel"
                    :mode #o755
                    :ensure :present)
          (static-file "/home/scripts/deploy"
                       :owner "root"
                       :group "wheel"
                       :mode #o755)
          (static-file "/home/scripts/prepare"
                       :owner "root"
                       :group "wheel"
                       :mode #o755)
          (static-file "/home/scripts/start"
                       :owner "root"
                       :group "wheel"
                       :mode #o755)
          (static-file "/home/scripts/start_"
                       :owner "root"
                       :group "wheel"
                       :mode #o755)
          #.(include "exwm")
          #.(include "kmxgit/production")
          #.(include "kmxgit/test")
          #.(include "kmxmetrics/production")
          #.(include "sdln/production")
          #.(include "skills/production")
          #.(include "www.kmx.io/production")
          ;; vu.kmx.io
          (resource 'directory "/var/www/vu"
                    :owner "root"
                    :group "www"
                    :mode #o755
                    :ensure :present)
          (resource 'directory "/var/www/vu/.well-known"
                    :owner "letsencrypt"
                    :group "www"
                    :mode #o755
                    :ensure :present)
          (static-file "/etc/nginx/available/vu.conf"
                       :owner "root"
                       :group "wheel"
                       :mode #o644))
