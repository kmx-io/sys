(resource 'group "git_test"
          :gid 7002
          :ensure :present)
(resource 'user "git_test"
          :uid 7002
          :gid 7002
          :home (homedir "git_test")
          :shell "/usr/local/bin/git-auth"
          :ensure :present)
(resource 'directory "/var/www/kmxgit_test"
          :owner "git_test"
          :group "www"
          :mode #o755
          :ensure :present)
(resource 'directory "/var/www/kmxgit_test/.well-known"
          :owner "letsencrypt"
          :group "www"
          :mode #o755
          :ensure :present)
(resource 'file "/etc/nginx/available/kmxgit_test.conf"
          :owner "root"
          :group "wheel"
          :mode #o644
          :content (read-file "kmxgit/etc/nginx/available/kmxgit_test.conf"))
(resource 'file "/etc/rc.d/kmxgit_test"
          :owner "root"
          :group "wheel"
          :mode #o755
          :content (read-file "kmxgit/etc/rc.d/kmxgit_test"))
